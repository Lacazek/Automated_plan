<Window x:Class="Opti_Struct.Front_Page"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Opti_Struct"
        mc:Ignorable="d"
        Title="Front_Page" Height="550" Width="900">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF9AFD7E" Offset="0"/>
                <GradientStop Color="#FF15D8D4" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="Auto_Contour" Content="Auto_Contour" HorizontalAlignment="Left" Height="40" Margin="44,165,0,0" VerticalAlignment="Top" Width="121" Click="Auto_Contour_Click" Background="#FFBFF9F0" FontSize="14" BorderBrush="Red" BorderThickness="4,4,4,3"/>
        <Button x:Name="Auto_Planning" Content="Auto_Planning" HorizontalAlignment="Left" Height="40" Margin="44,266,0,0" VerticalAlignment="Top" Width="121" Click="Auto_Planning_Click" Background="#FFBFF9F0" FontSize="14" BorderThickness="4,4,4,4" BorderBrush="Blue"/>
        <Button x:Name="Auto_Evaluation" Content="Auto_Evaluation" HorizontalAlignment="Left" Height="40" Margin="44,335,0,0" VerticalAlignment="Top" Width="121" Click="Auto_Evaluation_Click" Background="#FFBFF9F0" FontSize="14" BorderThickness="4,4,4,4" BorderBrush="#FF058405"/>
        <Button x:Name="Auto_Transfert" Content="Auto_Transfert" HorizontalAlignment="Left" Height="40" Margin="44,400,0,0" VerticalAlignment="Top" Width="121" Click="Auto_Transfert_Click" Background="#FFBFF9F0" FontSize="14" BorderBrush="Black" BorderThickness="4,4,4,4"/>
        <TextBlock HorizontalAlignment="Center" Height="51" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="304" FontSize="36" FontWeight="Bold" TextAlignment="Center"><Run Language="fr-fr" Text="Auto Dosimetry"/></TextBlock>
        <TextBlock HorizontalAlignment="Center" Height="75" Margin="0,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="740" FontSize="16" FontStyle="Italic"><Run Text="Disclaimer : Ce code permet de réaliser automatiquement"/><Run Text=" une"/><Run Text=" dosimétrie, partiellement ou totalement, au"/><Run Text="x"/><Run Text=" choix de l'utilisateur. Des erreurs peuvent s"/><Run Language="fr-fr" Text="urvenir"/><Run Text=". L'utilisateur "/><Run Text="a"/><Run Text=" "/><Run Text="le mot le final et se doit de vérifier le résultat une fois exécuté."/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="799,492,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="63"><Run Language="fr-fr" Text="By Kiki®"/></TextBlock>
        <Button x:Name="Stop" Content="Stop" HorizontalAlignment="Left" Height="34" Margin="760,453,0,0" VerticalAlignment="Top" Width="102" Background="Red" Click="Stop_Click"/>
        <TextBlock x:Name="Log_Auto_Contour" HorizontalAlignment="Left" Height="109" Margin="190,135,0,0" TextWrapping="Wrap" Text="" TextTrimming="CharacterEllipsis" LineHeight="1.1"  VerticalAlignment="Top" Width="682" Background="White" FontSize="11" MouseLeftButtonDown="Log_MouseDoubleClick" />
        <TextBlock x:Name="Log_Auto_Planning" HorizontalAlignment="Left" Height="68" Margin="190,252,0,0" TextWrapping="Wrap" Text="" TextTrimming="CharacterEllipsis" LineHeight="1.1"  VerticalAlignment="Top" Width="682" Background="White" FontSize="11" MouseLeftButtonDown="Log_MouseDoubleClick"/>
        <TextBlock x:Name="Log_Auto_Evaluation" HorizontalAlignment="Left" Height="58" Margin="190,327,0,0" TextWrapping="Wrap" Text="" TextTrimming="CharacterEllipsis" LineHeight="1.1"  VerticalAlignment="Top" Width="682" Background="White" FontSize="11" MouseLeftButtonDown="Log_MouseDoubleClick"/>
        <TextBlock x:Name="Log_Auto_Transfert" HorizontalAlignment="Left" Height="53" Margin="190,394,0,0" TextWrapping="Wrap" Text="" TextTrimming="CharacterEllipsis" LineHeight="1.1"  VerticalAlignment="Top" Width="682" Background="White" FontSize="11" MouseLeftButtonDown="Log_MouseDoubleClick"/>

    </Grid>
</Window>
